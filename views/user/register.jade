extends ../layout.jade
block content
  include ../partials/header.jade
  
  .container
    .row
      .col-md-6.offset-md-3
        h1 Register Page
        .form-group
        form(action="/register", method="POST")
          label name:
          input(type="text", name="user[name]", placeholder="name").form-control
          label phone:
          input(type="number", name="user[phone]", placeholder="phone").form-control
          label email:
          input(type="text", name="user[email]", placeholder="email").form-control
          label username:
          input(type="text", name="username", placeholder="username").form-control
          label password:
          input(type="password", name="password", placeholder="password").form-control
          input(type="submit", name="submit",value="submit").btn.btn-primary
          
        
